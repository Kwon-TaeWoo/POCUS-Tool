<Application x:Class="POCUS.ROSC.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <!-- ===== 색상 리소스 ===== -->
        <SolidColorBrush x:Key="PrimaryBackground" Color="#303030"/>
        <SolidColorBrush x:Key="SecondaryBackground" Color="#383838"/>
        <SolidColorBrush x:Key="TertiaryBackground" Color="#404040"/>
        <SolidColorBrush x:Key="DarkBackground" Color="#2D2D30"/>
        <SolidColorBrush x:Key="PrimaryBorder" Color="#404040"/>
        <SolidColorBrush x:Key="SecondaryBorder" Color="#707070"/>
        <SolidColorBrush x:Key="TertiaryBorder" Color="#3F3F46"/>
        <SolidColorBrush x:Key="PrimaryForeground" Color="White"/>
        <SolidColorBrush x:Key="AccentColor" Color="#FF007ACC"/>
        <SolidColorBrush x:Key="SuccessColor" Color="Green"/>
        <SolidColorBrush x:Key="WarningColor" Color="Yellow"/>
        <SolidColorBrush x:Key="ErrorColor" Color="Red"/>
        
        <!-- ===== 버튼 스타일 ===== -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryForeground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SecondaryBorder}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontFamily" Value="Malgun Gothic"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center" 
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#484848"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#282828"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#202020"/>
                                <Setter Property="Foreground" Value="#808080"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="{StaticResource TertiaryBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBorder}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="8"/>
        </Style>
        
        <Style x:Key="SmallButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Height" Value="30"/>
        </Style>
        
        <!-- ===== 텍스트 블록 스타일 ===== -->
        <Style x:Key="DefaultTextBlock" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource PrimaryForeground}"/>
            <Setter Property="FontFamily" Value="Malgun Gothic"/>
        </Style>
        
        <Style x:Key="HeaderTextBlock" TargetType="TextBlock" BasedOn="{StaticResource DefaultTextBlock}">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="TitleTextBlock" TargetType="TextBlock" BasedOn="{StaticResource DefaultTextBlock}">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="SubtitleTextBlock" TargetType="TextBlock" BasedOn="{StaticResource DefaultTextBlock}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#FFCCCCCC"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="StatusTextBlock" TargetType="TextBlock" BasedOn="{StaticResource DefaultTextBlock}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="MeasurementTextBlock" TargetType="TextBlock" BasedOn="{StaticResource DefaultTextBlock}">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- ===== 입력 컨트롤 스타일 ===== -->
        <Style x:Key="DefaultTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryForeground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SecondaryBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Malgun Gothic"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        
        <Style x:Key="DefaultCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource PrimaryForeground}"/>
            <Setter Property="FontFamily" Value="Malgun Gothic"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        
        <!-- ===== 레이아웃 및 컨테이너 스타일 ===== -->
        <Style x:Key="DefaultPanel" TargetType="Panel">
            <Setter Property="Background" Value="{StaticResource PrimaryBackground}"/>
        </Style>
        
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PrimaryBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="15"/>
        </Style>
        
        <Style x:Key="MeasurementCard" TargetType="Border" BasedOn="{StaticResource CardBorder}">
            <Setter Property="Background" Value="{StaticResource TertiaryBackground}"/>
            <Setter Property="BorderBrush" Value="#606060"/>
        </Style>
        
        <Style x:Key="StatusIndicator" TargetType="Ellipse">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Fill" Value="{StaticResource AccentColor}"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
        
        <!-- ===== 프로그레스 바 및 애니메이션 스타일 ===== -->
        <Style x:Key="ModernProgressBar" TargetType="ProgressBar">
            <Setter Property="Background" Value="{StaticResource DarkBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TertiaryBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="8"/>
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="100"/>
        </Style>
        
        <Style x:Key="PulseAnimation" TargetType="FrameworkElement">
            <Style.Triggers>
                <Trigger Property="IsVisible" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever">
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                               From="0.3" To="1.0" 
                                               Duration="0:0:1.5"
                                               AutoReverse="True"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- ===== 그림자 효과 스타일 ===== -->
        <Style x:Key="DropShadowEffect" TargetType="FrameworkElement">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" 
                                    Direction="270" 
                                    ShadowDepth="5" 
                                    BlurRadius="10" 
                                    Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="AccentDropShadowEffect" TargetType="FrameworkElement">
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FF007ACC" 
                                    Direction="270" 
                                    ShadowDepth="5" 
                                    BlurRadius="10" 
                                    Opacity="0.6"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>

