<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- 색상 리소스 -->
    <SolidColorBrush x:Key="PrimaryBackground" Color="#303030"/>
    <SolidColorBrush x:Key="SecondaryBackground" Color="#383838"/>
    <SolidColorBrush x:Key="TertiaryBackground" Color="#404040"/>
    <SolidColorBrush x:Key="DarkBackground" Color="#2D2D30"/>
    <SolidColorBrush x:Key="PrimaryBorder" Color="#404040"/>
    <SolidColorBrush x:Key="SecondaryBorder" Color="#707070"/>
    <SolidColorBrush x:Key="TertiaryBorder" Color="#3F3F46"/>
    <SolidColorBrush x:Key="PrimaryForeground" Color="White"/>
    <SolidColorBrush x:Key="AccentColor" Color="#FF007ACC"/>
    <SolidColorBrush x:Key="SuccessColor" Color="Green"/>
    <SolidColorBrush x:Key="WarningColor" Color="Yellow"/>
    <SolidColorBrush x:Key="ErrorColor" Color="Red"/>
    
</ResourceDictionary>
