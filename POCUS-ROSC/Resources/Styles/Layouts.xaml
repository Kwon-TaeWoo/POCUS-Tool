<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- 기본 패널 스타일 -->
    <Style x:Key="DefaultPanel" TargetType="Panel">
        <Setter Property="Background" Value="{StaticResource PrimaryBackground}"/>
    </Style>
    
    <!-- 카드 스타일 Border -->
    <Style x:Key="CardBorder" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource PrimaryBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Padding" Value="15"/>
    </Style>
    
    <!-- 측정값 카드 스타일 -->
    <Style x:Key="MeasurementCard" TargetType="Border" BasedOn="{StaticResource CardBorder}">
        <Setter Property="Background" Value="{StaticResource TertiaryBackground}"/>
        <Setter Property="BorderBrush" Value="#606060"/>
    </Style>
    
    <!-- 상태 표시기 스타일 -->
    <Style x:Key="StatusIndicator" TargetType="Ellipse">
        <Setter Property="Width" Value="12"/>
        <Setter Property="Height" Value="12"/>
        <Setter Property="Fill" Value="{StaticResource AccentColor}"/>
        <Setter Property="Margin" Value="0,0,10,0"/>
    </Style>
    
</ResourceDictionary>
