<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- 모든 스타일 파일들을 포함 -->
    <ResourceDictionary.MergedDictionaries>
        <!-- 색상 리소스 -->
        <ResourceDictionary Source="Colors.xaml"/>
        
        <!-- 버튼 스타일 -->
        <ResourceDictionary Source="Buttons.xaml"/>
        
        <!-- 텍스트 블록 스타일 -->
        <ResourceDictionary Source="TextBlocks.xaml"/>
        
        <!-- 입력 컨트롤 스타일 -->
        <ResourceDictionary Source="InputControls.xaml"/>
        
        <!-- 레이아웃 및 컨테이너 스타일 -->
        <ResourceDictionary Source="Layouts.xaml"/>
        
        <!-- 프로그레스 바 및 애니메이션 스타일 -->
        <ResourceDictionary Source="ProgressAndAnimations.xaml"/>
        
        <!-- 그림자 효과 스타일 -->
        <ResourceDictionary Source="Effects.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
</ResourceDictionary>
