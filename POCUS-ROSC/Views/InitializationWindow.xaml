<Window x:Class="POCUS.ROSC.Views.InitializationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ROSC-WPF Initializing" 
        Height="400" 
        Width="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Topmost="True">
    
    <Window.Resources>
        <!-- 이 윈도우에서만 사용되는 특별한 스타일들만 정의 -->
    </Window.Resources>
    
    <!-- 메인 컨테이너 -->
    <Border Background="#FF1E1E1E" 
            CornerRadius="10" 
            BorderBrush="#FF3F3F46" 
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" 
                            Direction="270" 
                            ShadowDepth="5" 
                            BlurRadius="10" 
                            Opacity="0.3"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- 헤더 -->
            <StackPanel Grid.Row="0" 
                       Margin="30,30,30,20" 
                       HorizontalAlignment="Center">
                <TextBlock Text="POCUS-ROSC" 
                          Style="{StaticResource TitleTextBlock}"/>
                <TextBlock Text="Point-of-Care Ultrasound Tool" 
                          Style="{StaticResource SubtitleTextBlock}"
                          Margin="0,5,0,0"/>
            </StackPanel>
            
            <!-- 로고/아이콘 영역 -->
            <StackPanel Grid.Row="1" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center">
                <Ellipse Width="80" 
                        Height="80" 
                        Fill="#FF007ACC" 
                        Style="{StaticResource PulseAnimation}">
                    <Ellipse.Effect>
                        <DropShadowEffect Color="#FF007ACC" 
                                        Direction="270" 
                                        ShadowDepth="5" 
                                        BlurRadius="10" 
                                        Opacity="0.6"/>
                    </Ellipse.Effect>
                </Ellipse>
                <TextBlock Text="♡" 
                          FontSize="40" 
                          Foreground="#FFFFFFFF" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center" 
                          Margin="0,-60,0,0"/>
            </StackPanel>
            
            <!-- 상태 메시지 -->
            <TextBlock x:Name="StatusText" 
                      Grid.Row="2" 
                      Text="프로그램을 초기화하고 있습니다..." 
                      Style="{StaticResource StatusTextBlock}"
                      FontSize="16"
                      Margin="30,20,30,10"/>
            
            <!-- 프로그레스 바 -->
            <StackPanel Grid.Row="3" 
                       Margin="50,0,50,20">
                <ProgressBar x:Name="InitProgressBar" 
                            Style="{StaticResource ModernProgressBar}"
                            IsIndeterminate="False"
                            Value="0"
                            Maximum="100"/>
                
                <!-- 진행률 텍스트 -->
                <TextBlock x:Name="ProgressText" 
                          Text="0%" 
                          Style="{StaticResource SubtitleTextBlock}"
                          FontSize="12"
                          HorizontalAlignment="Right" 
                          Margin="0,5,0,0"/>
            </StackPanel>
            
            <!-- 단계 표시 -->
            <StackPanel Grid.Row="4" 
                       Margin="30,0,30,30" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Center">
                <TextBlock x:Name="StepText" 
                          Text="시작 중..." 
                          Style="{StaticResource SubtitleTextBlock}"
                          FontSize="12"
                          Foreground="#FF999999"
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
