<Window x:Class="ROSC.WPF.Views.InitializationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ROSC-WPF Initializing" 
        Height="400" 
        Width="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Topmost="True">
    
    <Window.Resources>
        <!-- 애니메이션 스타일 -->
        <Style x:Key="PulseAnimation" TargetType="FrameworkElement">
            <Style.Triggers>
                <Trigger Property="IsVisible" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever">
                                <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                               From="0.3" To="1.0" 
                                               Duration="0:0:1.5"
                                               AutoReverse="True"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- 프로그레스 바 스타일 -->
        <Style x:Key="ModernProgressBar" TargetType="ProgressBar">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="#FF007ACC"/>
            <Setter Property="BorderBrush" Value="#FF3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <Grid>
                                <Rectangle x:Name="PART_Track" 
                                         Fill="{TemplateBinding Background}" 
                                         RadiusX="4" RadiusY="4"/>
                                <Rectangle x:Name="PART_Indicator" 
                                         Fill="{TemplateBinding Foreground}" 
                                         HorizontalAlignment="Left" 
                                         RadiusX="4" RadiusY="4">
                                    <Rectangle.Clip>
                                        <RectangleGeometry x:Name="IndicatorClip" 
                                                         Rect="0,0,0,0"/>
                                    </Rectangle.Clip>
                                </Rectangle>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsIndeterminate" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetName="IndicatorClip"
                                                           Storyboard.TargetProperty="Rect.X"
                                                           From="-100" To="600" 
                                                           Duration="0:0:2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <!-- 메인 컨테이너 -->
    <Border Background="#FF1E1E1E" 
            CornerRadius="10" 
            BorderBrush="#FF3F3F46" 
            BorderThickness="1"
            Effect="{DynamicResource {x:Static SystemParameters.DropShadowKey}}">
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- 헤더 -->
            <StackPanel Grid.Row="0" 
                       Margin="30,30,30,20" 
                       HorizontalAlignment="Center">
                <TextBlock Text="ROSC-WPF" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="#FFFFFFFF" 
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Point-of-Care Ultrasound Tool" 
                          FontSize="14" 
                          Foreground="#FFCCCCCC" 
                          HorizontalAlignment="Center" 
                          Margin="0,5,0,0"/>
            </StackPanel>
            
            <!-- 로고/아이콘 영역 -->
            <StackPanel Grid.Row="1" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center">
                <Ellipse Width="80" 
                        Height="80" 
                        Fill="#FF007ACC" 
                        Style="{StaticResource PulseAnimation}">
                    <Ellipse.Effect>
                        <DropShadowEffect Color="#FF007ACC" 
                                        Direction="270" 
                                        ShadowDepth="5" 
                                        BlurRadius="10" 
                                        Opacity="0.6"/>
                    </Ellipse.Effect>
                </Ellipse>
                <TextBlock Text="♡" 
                          FontSize="40" 
                          Foreground="#FFFFFFFF" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center" 
                          Margin="0,-60,0,0"/>
            </StackPanel>
            
            <!-- 상태 메시지 -->
            <TextBlock x:Name="StatusText" 
                      Grid.Row="2" 
                      Text="프로그램을 초기화하고 있습니다..." 
                      FontSize="16" 
                      Foreground="#FFFFFFFF" 
                      HorizontalAlignment="Center" 
                      Margin="30,20,30,10"/>
            
            <!-- 프로그레스 바 -->
            <StackPanel Grid.Row="3" 
                       Margin="50,0,50,20">
                <ProgressBar x:Name="InitProgressBar" 
                            Style="{StaticResource ModernProgressBar}"
                            IsIndeterminate="False"
                            Value="0"
                            Maximum="100"/>
                
                <!-- 진행률 텍스트 -->
                <TextBlock x:Name="ProgressText" 
                          Text="0%" 
                          FontSize="12" 
                          Foreground="#FFCCCCCC" 
                          HorizontalAlignment="Right" 
                          Margin="0,5,0,0"/>
            </StackPanel>
            
            <!-- 단계 표시 -->
            <StackPanel Grid.Row="4" 
                       Margin="30,0,30,30" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Center">
                <TextBlock x:Name="StepText" 
                          Text="시작 중..." 
                          FontSize="12" 
                          Foreground="#FF999999" 
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
